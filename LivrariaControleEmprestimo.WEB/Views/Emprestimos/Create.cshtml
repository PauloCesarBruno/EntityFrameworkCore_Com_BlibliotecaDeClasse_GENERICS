@model LivrariaControleEmprestimo.DATA.Models.LivroClienteEmprestimo

@{
    ViewData["Title"] = "Create";
}

<h1>Novo Empréstimo</h1>

<h4>Preencha os capos abaixo para inclusão de um novo emprestimo de livro</h4>
<hr />

<div>
    <a class="btn btn-primary btn-sm" asp-action="Index">Voltar para a listagem</a>
</div>

<br />

<div class="row">
    <div class="col-sm-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card">
                <div class="card-header">Informações sobre o empréstimo</div>
                <div class="card-body row">

                    <div class="form-group">
                        <input asp-for="Id" type="hidden" class="form-control" value="0" />
                    </div>

                    <div class="form-group col-sm-8">
                        <label asp-for="LceIdCliente" class="control-label"></label>
                        <input asp-for="LceIdCliente" class="form-control" />
                        <div>
                            <span asp-validation-for="LceIdCliente" class="text-danger"></span>
                        </div>

                        <label asp-for="LceIdLivro" class="control-label"></label>
                        <input asp-for="LceIdLivro" class="form-control" />
                        <div>
                            <span asp-validation-for="LceIdLivro" class="text-danger"></span>
                        </div>

                        <label asp-for="LceDataEmprestimo" class="control-label"></label>
                        <input asp-for="LceDataEmprestimo" class="form-control" />
                        <div>
                            <span asp-validation-for="LceDataEmprestimo" class="text-danger"></span>
                        </div>

                        <label asp-for="LceDataEntrega" class="control-label"></label>
                        <input asp-for="LceDataEntrega" class="form-control" />
                        <div>
                            <span asp-validation-for="LceDataEntrega" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check">
                            <br />
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="LceEntregue" /> @Html.DisplayNameFor(model => model.LceEntregue)
                            </label>
                        </div>

                    </div>

                    <br />

                    <div class="form-group">
                        <input type="submit" value="Incluir Emprestimo" class="btn btn-success btn-sm" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
