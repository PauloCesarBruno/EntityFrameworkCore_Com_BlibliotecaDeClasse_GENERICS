@model IEnumerable<LivrariaControleEmprestimo.DATA.Models.Livro>

@{
    ViewData["Title"] = "Index";
}

<h1>Livros</h1>
<hr />

<p>
    <a class="btn btn-success btn-sm" asp-action="Create">Novo Livro</a>
</p>



    <table id="tblLivros" class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LivroNome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LivroAutor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LivroEditora)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LivroAnoPublicacao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LivroEdicao)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LivroNome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LivroAutor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LivroEditora)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LivroAnoPublicacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LivroEdicao)
                    </td>
                    <td class="row col-md">
                        <a asp-action="Edit" class="btn btn-warning btn-sm mr-1" asp-route-id="@item.Id">Alterar</a>
                        <a asp-action="Details" class="btn btn-primary btn-sm mr-1" asp-route-id="@item.Id">Detalhes</a>


                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-danger btn-sm mr-1" data-toggle="modal" data-target="#DeleteModal-@item.Id">
                            Excluir
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="DeleteModal-@item.Id" tabindex="-1" role="dialog" aria-labelledby="DeleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="DeleteModalLabel">Excluir Livro</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Deseja Realmente Excluir o Livro @item.LivroNome ?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Não</button>
                                        <a asp-action="Delete" class="btn btn-danger mr-1" asp-route-id="@item.Id">Sim</a>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </td>
                </tr>
            }
        </tbody>
    </table>

    @section Scripts {
        <script>

            $(document).ready(function () {
                $('#tblLivros').DataTable({
                    language: {
                        url: '//cdn.datatables.net/plug-ins/1.10.25/i18n/Portuguese-Brasil.json'
                    }
                });
            });

        </script>
    }
